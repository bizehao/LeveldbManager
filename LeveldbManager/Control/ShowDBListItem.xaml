    </UserControl.Resources>

    <Expander
        x:Name="ExpItem"
        Padding="0"
        HorizontalAlignment="Stretch"
        HorizontalContentAlignment="Stretch"
        Collapsed="ExpItem_Collapsed"
        Expanding="ExpItem_Expanding"
        IsExpanded="{x:Bind Contact.IsExpanded, Mode=TwoWay}">

        <Expander.Header>
            <Grid x:Name="ItemHeader">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    Text="{x:Bind Contact.Name, Mode=OneWay}"
                    TextAlignment="Center" />
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ImageIcon
                        Width="24"
                        Height="24"
                        Source="/Assets/homepage.svg" />
                    <ImageIcon
                        Width="24"
                        Height="24"
                        Source="/Assets/homepage.svg" />
                </StackPanel>
            </Grid>
        </Expander.Header>

        <Expander.Content>
            <StackPanel HorizontalAlignment="Stretch" Orientation="Vertical">
                <Grid x:Name="ItemContent0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <ComboBox
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        SelectedIndex="0">
                        <x:String>Default</x:String>
                        <x:String>Blue</x:String>
                        <x:String>Green</x:String>
                        <x:String>Red</x:String>
                        <x:String>Yellow</x:String>
                    </ComboBox>
                    <Button
                        x:Name="NewKey"
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Click="NewKey_Click"
                        Content="新增key" />
                </Grid>

                <AutoSuggestBox
                    x:Name="AutoSuggestBox"
                    Margin="2"
                    PlaceholderText="请输入key"
                    TextChanged="AutoSuggestBox_TextChanged" />

                <ListView
                    x:Name="KeyListView"
                    HorizontalAlignment="Stretch"
                    BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                    BorderThickness="1"
                    IsItemClickEnabled="True"
                    ItemClick="KeyListView_ItemClick"
                    Loaded="KeyListLoaded" />
            </StackPanel>
        </Expander.Content>
    </Expander>


</UserControl>
